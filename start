#!/bin/bash
#
# A wrapper for requireJs runner
#
CUR="${BASH_SOURCE[0]}";
if([ -h "${CUR}" ]) then
  while([ -h "${CUR}" ]) do CUR=`readlink -m "${CUR}"`; done
fi
pushd . > /dev/null
cd `dirname ${CUR}` > /dev/null
CUR=`pwd`;
popd  > /dev/null

exec "${CUR}/node_modules/forever/bin/forever" "-l" "${CUR}/logs/web.log" "-a" "start" "${CUR}/emo" "web"
exec "${CUR}/node_modules/forever/bin/forever" "-l" "${CUR}/logs/crawler.log" "-a" "start" "${CUR}/emo" "crawler"
exec "${CUR}/node_modules/forever/bin/forever" "-l" "${CUR}/logs/trainer.log" "-a" "start" "${CUR}/emo" "trainer"
